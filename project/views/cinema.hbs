  </div>

  <!-- heading   starting -->
  <div >
    <h1>DreamFlicks Multiplex</h1>
</div>


<div class="day">
    <label>Select Day: </label>
    <select class="form-control" id="day">
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option>
        <option value="Thursday">Thursday</option>
        <option value="Fridy">Friday</option>
        <option value="Saturday">Saturday</option>
        <option value="Sunday">Sunday</option>
        
    </select>
</div>

<div class="day">
    <label>Select Show Time: </label>
    <select class="form-control" id="showTime">
        <option value="11:00 PM">11:00 PM</option>
        <option value="2:30 PM">2:30 PM</option>
        <option value="6:30 PM">6:30 PM</option>
        <option value="9:30 PM">9:30 PM</option>
        
    </select>
</div>






<div class="container" style="display: flex; align-items:center; justify-content:center">
    <div>
        <label>Select Cinema: </label>
        <select class="form-control" id="movie">
            {{#each movies}}
            <option value="{{rate}}">{{name}}/screen{{screenNo}}- Rs {{rate}}</option>
            {{/each}}
        </select>
    </div>



    <ul class="showcase" style="list-style-type:none; margin:50px; margin-top:100px " >
        <li>
            <div class="seat"></div>
            <small>Available</small>
        </li>
        <li>
            <div class="seat  selected"></div>
            <small>Seleted</small>
        </li>
        <li>
            <div class="seat occupied"></div>
            <small>Occupied</small>
        </li>
    </ul>





    <div style="width: 350px;">
        <div class="screen"></div>
        
        <div class="row" id="screen1" style="visibility: hidden; display:none" >
            {{#each screen1}}
            <div class="seat {{status}}"  id="{{seatno}}"></div>

            {{/each}}




        </div>
        <div class="row" id="screen2" style="visibility: hidden; display:none">
            {{#each screen2}}
            <div class="seat {{status}}"  id="{{seatno}}"></div>
            {{/each}}
        </div>




        <div class="row" id="screen3" style="visibility: hidden; display:none">
            {{#each screen3}}
            <div class="seat {{status}}"  id="{{seatno}}"></div>
            {{/each}}
        </div>



    </div>

</div>



<div id="finalCost">
    <p id="cost"></p>
</div>

<div class="payment" style="margin: 0px 400px;">
    <label for="paymentMethod">Select Payment Method: </label>
    <select class="form-control" id="paymentMethod">
      <option value="creditCard">Credit Card</option>
      <option value="debitCard">Debit Card</option>
      <option value="netBanking">Net Banking</option>
      <!-- Add more payment methods as needed -->
    </select>

    <button class="btn btn-primary">Proceed to Pay</button>
  </div>






















